@model FormInputModel.Squad

<form method="post" action="/squad/index">
    <div class="form-group">
        <label for="groupId">Search your group by entering your group code</label>
        <div class="form-group">
            <input type="text" asp-for="slug" name="slug" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>